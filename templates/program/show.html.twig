<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-xl overflow-hidden">
        <!-- En-tête du programme -->
        <div class="relative h-96">
            <img src="{{ program.image }}" alt="{{ program.title }}" class="w-full h-full object-cover">
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black to-transparent p-8">
                <h1 class="text-4xl font-bold text-white mb-2">{{ program.title }}</h1>
                <div class="flex items-center space-x-4">
                    <span class="px-3 py-1 bg-primary-600 text-white rounded-full text-sm">{{ program.difficulty }}</span>
                    <span class="text-white">{{ program.duration }}h</span>
                    <span class="text-white">{{ program.price }}€</span>
                </div>
            </div>
        </div>

        <!-- Contenu détaillé -->
        <div class="p-8">
            <!-- Navigation par onglets -->
            <div class="border-b border-gray-200 mb-8">
                <nav class="-mb-px flex space-x-8">
                    <button class="border-primary-500 text-primary-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                        Aperçu du programme
                    </button>
                    <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                        Planning détaillé
                    </button>
                    <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                        Matériel & Prérequis
                    </button>
                </nav>
            </div>

            <!-- Description formatée -->
            <div class="prose prose-lg max-w-none">
                {% set sections = program.description|split('\n\n') %}
                {% for section in sections %}
                    {% if loop.first %}
                        <p class="text-xl text-gray-700 mb-8">{{ section }}</p>
                    {% else %}
                        {% set title_content = section|split(':') %}
                        {% if title_content|length > 1 %}
                            <h3 class="text-lg font-semibold text-gray-900 mt-6 mb-4">{{ title_content[0] }}</h3>
                            <div class="pl-4">
                                {{ title_content[1]|nl2br }}
                            </div>
                        {% else %}
                            <p>{{ section }}</p>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div> 