<div class="border-t border-gray-100">
    <button onclick="toggleSession(this)" 
            class="w-full px-8 py-4 flex justify-between items-center bg-gray-50 hover:bg-gray-100 transition-colors duration-200">
        <div class="flex items-center gap-3">
            <div class="bg-purple-100 w-10 h-10 rounded-lg flex items-center justify-center">
                <span class="text-purple-600 font-semibold">{{ session }}</span>
            </div>
            <h5 class="text-lg font-semibold text-gray-700">Session {{ session }}</h5>
        </div>
        <i class="fas fa-chevron-down text-gray-400 transform transition-transform duration-300"></i>
    </button>
    
    <div class="session-content hidden">
        <div class="grid grid-cols-1 gap-6 p-6 bg-gray-50">
            {% for exercice in exercices %}
                {% if exercice.week == week and exercice.session == 'Session ' ~ session %}
                    {% include 'program/_exercice_card.html.twig' with { exercice: exercice } %}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div> 