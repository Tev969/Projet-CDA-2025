<header class="bg-gradient-to-r from-purple-900 via-purple-800 to-purple-600 shadow-xl fixed w-full top-0 z-50 font-sans backdrop-blur-sm bg-opacity-95">
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width=\"30\" height=\"30\" viewBox=\"0 0 30 30\" fill=\"none\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cpath d=\"M1.22676 0C1.91374 0 2.45351 0.539773 2.45351 1.22676C2.45351 1.91374 1.91374 2.45351 1.22676 2.45351C0.539773 2.45351 0 1.91374 0 1.22676C0 0.539773 0.539773 0 1.22676 0Z\" fill=\"rgba(255,255,255,0.05)\"%3E%3C/path%3E%3C/svg%3E')] opacity-10"></div>
    <nav class="container mx-auto px-6 py-3">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <a href="/" class="flex items-center space-x-3 group">
                    <div class="relative">
                        <svg class="h-12 w-12 text-white transform transition-all duration-300 group-hover:scale-110" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path class="transform origin-center transition-transform duration-500 group-hover:rotate-6" d="M5 21V3.5C5 3.5 5 3 5.5 3C6 3 6 3.5 6 3.5V21" stroke-linecap="round"/>
                            <path class="transform origin-center transition-transform duration-500 group-hover:-rotate-6" d="M19 21V3.5C19 3.5 19 3 18.5 3C18 3 18 3.5 18 3.5V21" stroke-linecap="round"/>
                            <path class="animate-pulse" d="M14.5 8C14.5 8 14 10 12 10C10 10 9.5 8 9.5 8" stroke-linecap="round"/>
                            <path class="animate-pulse [animation-delay:1s]" d="M14.5 13C14.5 13 14 15 12 15C10 15 9.5 13 9.5 13" stroke-linecap="round"/>
                            <path class="transform origin-center transition-transform duration-500 group-hover:translate-y-1" d="M8 21L8 6" stroke-linecap="round"/>
                            <path class="transform origin-center transition-transform duration-500 group-hover:-translate-y-1" d="M16 21L16 6" stroke-linecap="round"/>
                        </svg>
                        <div class="absolute -inset-1 bg-white opacity-20 rounded-full blur group-hover:opacity-30 transition-opacity duration-300"></div>
                    </div>
                    <span class="text-white text-2xl font-extrabold tracking-tight transition-all duration-300 group-hover:text-gray-200 relative">
                        GripUp
                        <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
                    </span>
                </a>
            </div>
            
            <!-- Menu Desktop -->
            <div class="hidden md:flex items-center space-x-8">
                <a href="{{ path('app_home') }}" class="text-white hover:text-gray-200 font-medium transition-all duration-300 relative group">
                    <span class="relative z-10">Accueil</span>
                    <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-white transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
                </a>
                
                <a href="{{ path('app_programs') }}" class="text-white hover:text-gray-200 font-medium transition-all duration-300 relative group">
                    <span class="relative z-10">Programmes</span>
                    <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-white transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
                </a>
                
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" class="text-white hover:text-gray-200 font-medium transition-all duration-300 relative group">
                        <span class="relative z-10">Admin</span>
                        <span class="absolute inset-x-0 -bottom-1 h-0.5 bg-white transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
                    </a>
                {% endif %}
                
                {% if app.user %}
                    <div class="relative group">
                        <button class="relative inline-flex items-center text-white bg-purple-500 hover:bg-purple-400 px-6 py-2.5 rounded-xl transition-all duration-300 transform hover:-translate-y-0.5 hover:shadow-lg font-medium group overflow-hidden">
                            <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-400 to-pink-500 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                            <svg class="w-5 h-5 mr-2 relative z-10 transform group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            <span class="relative z-10">Créer</span>
                            <svg class="w-4 h-4 ml-2 relative z-10 transform group-hover:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top scale-95 group-hover:scale-100">
                            <div class="p-2 space-y-1">
                                <a href="{{ path('app_article_new') }}" class="flex items-center space-x-2 px-4 py-3 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-all duration-300 font-medium group">
                                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                    <div class="flex flex-col">
                                        <span class="font-medium">Article</span>
                                        <span class="text-sm text-gray-500">Partagez votre expérience</span>
                                    </div>
                                </a>
                                {% if is_granted('ROLE_COACH') %}
                                <a href="{{ path('app_program_create') }}" class="flex items-center space-x-2 px-4 py-3 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-all duration-300 font-medium group">
                                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
                                    </svg>
                                    <div class="flex flex-col">
                                        <span class="font-medium">Programme</span>
                                        <span class="text-sm text-gray-500">Créez votre entraînement</span>
                                    </div>
                                </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="relative group">
                        <button class="flex items-center space-x-2 text-white hover:text-gray-200 transition-all duration-300 font-medium">
                            <span>{{ app.user.firstname }}</span>
                            <svg class="w-4 h-4 transform group-hover:rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                            </svg>
                        </button>
                        <div class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top scale-95 group-hover:scale-100">
                            <div class="p-2 space-y-1">
                                <a href="{{ path('app_profil') }}" class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-all duration-300 font-medium group">
                                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <span>Mon Profil</span>
                                </a>

                                {% if not is_granted('ROLE_COACH') %}
                                <a href="{{path('app_coach') }}" class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-all duration-300 font-medium group">
                                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2.5 2.5 0 00-2.5-2.5H14"/>
                                    </svg>
                                    <div class="flex flex-col">
                                        <span>Devenir coach</span>
                                        <span class="text-xs text-gray-500">Partagez votre expertise</span>
                                    </div>
                                </a>
                                {% endif %}

                                <div class="my-1 border-t border-gray-100"></div>
                                <a href="{{ path('app_logout') }}" class="flex items-center space-x-2 px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 rounded-lg transition-all duration-300 font-medium group">
                                    <svg class="w-5 h-5 transform group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                                    </svg>
                                    <span>Déconnexion</span>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="flex items-center space-x-4">
                        <a href="{{ path('app_register') }}" class="relative overflow-hidden text-white bg-purple-500 hover:bg-purple-400 px-6 py-2.5 rounded-xl transition-all duration-300 font-medium group">
                            <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-400 to-pink-500 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                            <span class="relative z-10">S'inscrire</span>
                        </a>
                        <a href="{{ path('app_login') }}" class="relative overflow-hidden text-purple-900 bg-white hover:bg-gray-50 px-6 py-2.5 rounded-xl transition-all duration-300 shadow-md hover:shadow-xl font-medium group">
                            <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-100 to-pink-100 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                            <span class="relative z-10">Se connecter</span>
                        </a>
                    </div>
                {% endif %}
            </div>
            
            <!-- Menu Mobile -->
            <div class="md:hidden">
                <button class="text-white hover:text-gray-200 focus:outline-none transform hover:scale-110 transition-transform duration-300" onclick="toggleMobileMenu()">
                    <svg class="h-6 w-6" id="menuIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                </button>
                
                <div id="mobileMenu" class="fixed inset-0 bg-gradient-to-br from-purple-900 via-purple-800 to-purple-600 bg-opacity-98 backdrop-blur-sm z-50 transform translate-x-full transition-transform duration-500">
                    <div class="flex justify-end p-6">
                        <button class="text-white hover:text-gray-200 transform hover:rotate-180 transition-all duration-300" onclick="toggleMobileMenu()">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                    
                    <div class="flex flex-col items-center space-y-8 p-8">
                        <a href="{{ path('app_home') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Accueil</a>
                        <a href="{{ path('app_programs') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Programmes</a>
                        
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Admin</a>
                        {% endif %}
                        
                        {% if app.user %}
                            <a href="{{ path('app_article_new') }}" class="relative overflow-hidden text-white text-xl bg-purple-500 hover:bg-purple-400 px-8 py-3 rounded-xl transition-all duration-300 font-medium group">
                                <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-400 to-pink-500 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                                <span class="relative z-10">Créer un article</span>
                            </a>
                            {% if is_granted('ROLE_COACH') %}
                            <a href="{{ path('app_program_create') }}" class="relative overflow-hidden text-white text-xl bg-purple-500 hover:bg-purple-400 px-8 py-3 rounded-xl transition-all duration-300 font-medium group">
                                <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-400 to-pink-500 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                                <span class="relative z-10">Créer un programme</span>
                            </a>
                            {% endif %}
                            <a href="{{ path('app_profil') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Mon Profil</a>
                            {% if not is_granted('ROLE_COACH') %}
                            <a href="{{ path('app_coach') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Devenir coach</a>
                            {% endif %}
                            <a href="{{ path('app_logout') }}" class="text-white text-xl hover:text-gray-200 transition-all duration-300 font-medium hover:scale-110 transform">Déconnexion</a>
                        {% else %}
                            <div class="flex flex-col space-y-4">
                                <a href="{{ path('app_register') }}" class="relative overflow-hidden text-white text-xl bg-purple-500 hover:bg-purple-400 px-8 py-3 rounded-xl transition-all duration-300 font-medium group">
                                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-400 to-pink-500 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                                    <span class="relative z-10">S'inscrire</span>
                                </a>
                                <a href="{{ path('app_login') }}" class="relative overflow-hidden text-purple-900 text-xl bg-white hover:bg-gray-50 px-8 py-3 rounded-xl transition-all duration-300 shadow-md hover:shadow-xl font-medium group">
                                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-purple-100 to-pink-100 opacity-0 group-hover:opacity-50 transition-opacity duration-300"></span>
                                    <span class="relative z-10">Se connecter</span>
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
</header>

<script>
function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobileMenu');
    const menuIcon = document.getElementById('menuIcon');
    const isOpen = mobileMenu.classList.contains('translate-x-0');
    
    if (isOpen) {
        mobileMenu.classList.remove('translate-x-0');
        mobileMenu.classList.add('translate-x-full');
    } else {
        mobileMenu.classList.remove('translate-x-full');
        mobileMenu.classList.add('translate-x-0');
    }
}
</script>

<!-- Spacer pour compenser le header fixed -->
<div class="h-16"></div>
