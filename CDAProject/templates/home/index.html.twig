{% extends 'base.html.twig' %}

{% block title %}Articles d'Escalade{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center mb-12 text-gray-800">Nos meilleurs articles</h1>

        {% set categories = {
            'Les chaussons': articles|filter(article => 'Les chaussons' in article.categories|map(cat => cat.title)),
            'Les bon spots': articles|filter(article => 'Les bon spots' in article.categories|map(cat => cat.title)),
            'Les bonnes pratiques': articles|filter(article => 'Les bonnes pratiques' in article.categories|map(cat => cat.title))
        } %}

        {% for categoryName, categoryArticles in categories %}
            {% if categoryArticles|length > 0 %}
                <div class="mb-12">
                    <h2 class="text-2xl font-semibold mb-6 pb-2 border-b-2 border-gray-200 text-gray-700">{{ categoryName }}</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        {% for article in categoryArticles %}
                            <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition duration-300 hover:shadow-xl hover:-translate-y-1">
                                <div class="relative">
                                <a href="{{ path('app_article', { 'id': article.id }) }}">
                                    <img src="{{ asset( article.picture) }}" 
                                         alt="{{ article.title }}" 
                                         class="w-full h-48 object-cover">
                                </a>
                                </div>
                                <div class="p-6">
                                    <h3 class="text-xl font-semibold mb-3 text-gray-800">{{ article.title }}</h3>
                                    <p class="text-gray-600 mb-4 line-clamp-3">{{ article.description }}</p>
                                    <div class="pt-4 border-t border-gray-100">
                        
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
