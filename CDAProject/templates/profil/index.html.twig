{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
    

            <div class="bg-white rounded-2xl shadow-xl overflow-hidden backdrop-blur-sm border border-gray-100">
                <div class="bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-500 px-6 py-8">
                    <h1 class="text-3xl font-bold text-white tracking-tight">Mon Profil</h1>
                    <p class="text-indigo-100 mt-2">Gérez vos informations personnelles</p>
                </div>

                {{ form_start(form, {'attr': {'class': 'p-8'}}) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    {# Colonne gauche - Informations personnelles #}
                    <div class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <div class="bg-gradient-to-r from-gray-50 to-white px-4 py-4 border-b border-gray-100">
                            <h2 class="text-lg font-semibold text-gray-800">Informations personnelles</h2>
                        </div>
                        <div class="p-6 space-y-6">
                            {% for field in [form.email, form.firstname, form.lastname, form.age, form.sexe] %}
                                <div class="group">
                                    {{ form_label(field, null, {
                                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1 group-hover:text-indigo-600 transition-colors'}
                                    }) }}
                                    {% if field.vars.block_prefixes[1] == 'choice' %}
                                        <div class="relative group">
                                            {{ form_widget(field, {
                                                'attr': {
                                                    'class': 'block w-full rounded-lg border-gray-200 bg-white/50 backdrop-blur-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-200 appearance-none bg-no-repeat pr-10 cursor-pointer hover:border-indigo-300 text-gray-700 font-medium',
                                                    'style': 'background-image: url("data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'none\' viewBox=\'0 0 24 24\' stroke-width=\'1.5\' stroke=\'%236366f1\' class=\'w-6 h-6\'%3e%3cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' d=\'m19.5 8.25-7.5 7.5-7.5-7.5\'%3e%3c/path%3e%3c/svg%3e"); background-position: right 0.75rem center; background-size: 1.2em 1.2em;'
                                                }
                                            }) }}
                                            <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity">
                                                <svg class="w-5 h-5 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                                </svg>
                                            </div>
                                            <div class="absolute inset-0 rounded-lg border-2 border-transparent group-hover:border-indigo-100 pointer-events-none transition-colors"></div>
                                        </div>
                                    {% else %}
                                        {{ form_widget(field, {
                                            'attr': {
                                                'class': 'block w-full rounded-lg border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-200'
                                            }
                                        }) }}
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                    {# Colonne droite - Informations physiques et sportives #}
                    <div class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <div class="bg-gradient-to-r from-gray-50 to-white px-4 py-4 border-b border-gray-100">
                            <h2 class="text-lg font-semibold text-gray-800">Informations physiques et sportives</h2>
                        </div>
                        <div class="p-6 space-y-6">
                            {% for field in [form.size, form.weight, form.level, form.week_activity] %}
                                <div class="group">
                                    {{ form_label(field, null, {
                                        'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1 group-hover:text-indigo-600 transition-colors'}
                                    }) }}
                                    {% if field.vars.block_prefixes[1] == 'choice' %}
                                        <div class="relative group">
                                            {{ form_widget(field, {
                                                'attr': {
                                                    'class': 'block w-full rounded-lg border-gray-200 bg-white/50 backdrop-blur-sm shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-200 appearance-none bg-no-repeat pr-10 cursor-pointer hover:border-indigo-300 text-gray-700 font-medium',
                                                    'style': 'background-image: url("data:image/svg+xml,%3csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'none\' viewBox=\'0 0 24 24\' stroke-width=\'1.5\' stroke=\'%236366f1\' class=\'w-6 h-6\'%3e%3cpath stroke-linecap=\'round\' stroke-linejoin=\'round\' d=\'m19.5 8.25-7.5 7.5-7.5-7.5\'%3e%3c/path%3e%3c/svg%3e"); background-position: right 0.75rem center; background-size: 1.2em 1.2em;'
                                                }
                                            }) }}
                                            <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity">
                                                <svg class="w-5 h-5 text-indigo-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                                                </svg>
                                            </div>
                                            <div class="absolute inset-0 rounded-lg border-2 border-transparent group-hover:border-indigo-100 pointer-events-none transition-colors"></div>
                                        </div>
                                    {% else %}
                                        {{ form_widget(field, {
                                            'attr': {
                                                'class': 'block w-full rounded-lg border-gray-200 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-200'
                                            }
                                        }) }}
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="mt-8 text-center">
                    <button type="submit" class="inline-flex items-center px-8 py-4 border border-transparent text-base font-medium rounded-xl text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transform hover:-translate-y-0.5 transition-all duration-200 shadow-lg hover:shadow-xl">
                        <svg class="w-5 h-5 mr-2 animate-pulse" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"/>
                        </svg>
                        Mettre à jour mon profil
                    </button>
                </div>
                {{ form_end(form) }}

                {# Section des programmes enregistrés #}
                <div class="mt-12">
                    <div class="bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-4 border-b border-gray-100">
                            <h2 class="text-xl font-semibold text-gray-800">Mes Programmes</h2>
                            <p class="text-sm text-gray-500 mt-1">Tous vos programmes d'entraînement personnalisés</p>
                        </div>
                        
                        <div class="p-6">
                            {% if app.user.programs is defined and app.user.programs|length > 0 %}
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                    {% for program in app.user.programs %}
                                        <div class="group relative bg-white rounded-xl border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                                            <div class="absolute inset-0 bg-gradient-to-r from-indigo-600/5 to-purple-600/5 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                                            <div class="p-5">
                                                <h3 class="text-lg font-semibold text-gray-800 mb-2">{{ program.name }}</h3>
                                                <p class="text-sm text-gray-600 mb-4">{{ program.description|slice(0, 100) }}...</p>
                                                <div class="flex items-center justify-between">
                                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                                        {{ program.category.name }}
                                                    </span>
                                                    <a href="{{ path('app_program_show', {'id': program.id}) }}" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">
                                                        Voir détails →
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-center py-8">
                                    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
                                        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                                        </svg>
                                    </div>
                                    <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun programme enregistré</h3>
                                    <p class="text-gray-500 mb-6">Vous n'avez pas encore de programmes enregistrés.</p>
                                    <a href="{{ path('app_my_programs') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                        Voir mes programmes
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
{% endblock %}
