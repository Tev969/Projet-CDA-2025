{% extends 'base.html.twig' %}

{% block title %}Nos Programmes{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Nos Programmes</h1>
        <div class="row">
            {% for program in programs %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{ program.image }}" class="card-img-top" alt="{{ program.title }}">
                        <div class="card-body">
                            <h5 class="card-title">{{ program.title }}</h5>
                            <p class="card-text">{{ program.description|slice(0, 150) }}...</p>
                            <a href="{{ path('app_program_show', {'id': program.id}) }}" class="btn btn-primary">Lire plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %} 