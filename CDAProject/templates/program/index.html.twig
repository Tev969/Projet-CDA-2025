{% extends 'base.html.twig' %}

{% block title %}Nos Programmes{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-12">Nos Programmes d'Escalade</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for program in programs %}
                <div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:-translate-y-2">
                    <div class="relative">
                        <img src="{{ asset(program.image) }}" 
                             alt="{{ program.title }}" 
                             class="w-full h-64 object-cover transition duration-300 hover:scale-105">
                        <div class="absolute top-4 right-4">
                            <span class="px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-full">
                                {{ program.difficulty }}
                            </span>
                        </div>
                    </div>
                    
                    <div class="p-6">
                        <h2 class="text-2xl font-bold text-gray-800 mb-4">{{ program.title }}</h2>
                        
                        <p class="text-gray-600 mb-6 line-clamp-3">
                            {{ program.description }}
                        </p>
                        
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center space-x-2 text-gray-600">
                                <i class="fas fa-clock"></i>
                                <span>{{ program.duration }}h</span>
                            </div>
                            <span class="px-4 py-2 bg-green-500 text-white text-sm font-semibold rounded-full">
                                Gratuit
                            </span>
                        </div>
                        
                        <a href="{{ path('app_program_show', {'id': program.id}) }}" 
                           class="block w-full text-center bg-gradient-to-r from-purple-600 to-blue-600 text-white py-3 rounded-lg font-semibold hover:from-purple-700 hover:to-blue-700 transition duration-300">
                            Voir le programme
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hover-card {
            transition: transform 0.3s ease-in-out;
        }
        
        .hover-card:hover {
            transform: translateY(-5px);
        }
        
        .card {
            border-radius: 15px;
            overflow: hidden;
            border: none;
        }
        
        .card-img-top {
            transition: transform 0.3s ease-in-out;
        }
        
        .card:hover .card-img-top {
            transform: scale(1.05);
        }
        
        .badge {
            font-size: 0.8rem;
            padding: 0.5em 1em;
        }
        
        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }
        
        .btn-outline-primary {
            border-radius: 25px;
            padding: 8px 20px;
            font-weight: 500;
        }
        
        .btn-outline-primary:hover {
            transform: scale(1.02);
        }
        
        h1 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 2rem;
        }
        
        .program-details {
            font-size: 0.9rem;
        }
    </style>
{% endblock %} 