{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h1>{{ program.title }}</h1>
                <img src="{{ program.image }}" class="img-fluid mb-4" alt="{{ program.title }}">
                <p>{{ program.description }}</p>
                <p class="text-muted">Créé le {{ program.createdAt|date('d/m/Y') }}</p>
                <a href="{{ path('app_programs') }}" class="btn btn-secondary">Retour aux programmes</a>
            </div>
        </div>
    </div>
{% endblock %} 